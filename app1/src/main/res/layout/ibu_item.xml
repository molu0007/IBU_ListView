<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
     >
    <ImageView
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/icon_back"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:scaleType="fitEnd"
        android:src="@drawable/img_beijing"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="18dp"
        android:src="@drawable/img_b"
        android:id="@+id/image_b"
        android:layout_alignBottom="@+id/icon_back"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.zhangqi.iburefreshlistview.ibuRefreshFirstStepView
            android:id="@+id/first_view"
            android:layout_width="95dp"
            android:layout_height="95dp"
            />
        <com.zhangqi.iburefreshlistview.ibuRefreshSecondStepView
            android:id="@+id/second_view"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:visibility="gone"
            />
        <com.zhangqi.iburefreshlistview.ibuRefreshThirdStepView
            android:id="@+id/third_view"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_pull_to_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="下拉刷新"
            />

    </LinearLayout>

</RelativeLayout>
